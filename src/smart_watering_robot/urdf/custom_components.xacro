<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- 1. 濕度感測器 (一個小方塊) -->
    <link name="moisture_sensor_link">
        <visual>
            <geometry><box size="0.02 0.02 0.05"/></geometry>
            <material name="green"><color rgba="0.1 0.8 0.1 1"/></material>
        </visual>
    </link>
    <joint name="moisture_sensor_joint" type="fixed">
        <parent link="base_link"/>
        <child link="moisture_sensor_link"/>
        <origin xyz="0.08 0 0.05" rpy="0 0 0"/> <!-- 裝在機器人前方 -->
    </joint>

    <!-- 2. 水泵/噴頭 (一個小圓柱) -->
    <link name="pump_link">
        <visual>
            <geometry><cylinder radius="0.015" length="0.04"/></geometry>
            <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
        </visual>
    </link>
    <joint name="pump_joint" type="fixed">
        <parent link="base_link"/>
        <child link="pump_link"/>
        <origin xyz="-0.08 0 0.0" rpy="0 1.5707 0"/> <!-- 裝在機器人後方, 橫放 -->
    </joint>

</robot>